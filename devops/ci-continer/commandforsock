docker run -it --name finaltest -v /var/run/docker.sock:/var/run/docker.sock alpine
# mount the docker.sock to the container and get into container with interactive mode

inside container:
apk add -u curl
# sudo apt update -y && sudo apt upgrade -y
# sudo apt install curl -y

# to install curl

curl -XPOST --unix-socket /var/run/docker.sock http://localhost/images/create?fromImage=mongo:4.4
# create image(pull to image) from inside container (brother containers)

curl -XPOST --unix-socket /var/run/docker.sock -H 'Content-Type: application/json' -d '{"image":"mongo:4.4"}' http://localhost/containers/create
# to create container and get id of container
3206061606f8c6c129aa16a36ba3588fbf8d5238522f22f1a757cfb320ccc4a3

curl -XPOST --unix-socket /var/run/docker.sock http://localhost/containers/3206061606f8c6c129aa16a36ba3588fbf8d5238522f22f1a757cfb320ccc4a3/start
# to start container

exit

curl -H 'Content-Type: application/json' --unix-socket /var/run/docker.sock localhost:4243/containers/<service_name>/exec -d '{"Cmd":["date"]}'

curl -H 'Content-Type: application/json' --unix-socket /var/run/docker.sock localhost/containers/postgres_db/start